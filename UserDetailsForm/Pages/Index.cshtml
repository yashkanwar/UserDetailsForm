@page
@model UserDetailsForm.Pages.IndexModel
@{
    ViewData["Title"] = "User Entries";
}

<h2>User Entries</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<a asp-page="Insert" class="btn btn-primary">Insert New User</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            <th>Email</th>
            <th>State</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersList)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.MiddleName</td>
                <td>@user.LastName</td>
                <td>@user.DOB.ToString("yyyy-MM-dd")</td>
                <td>@user.Email</td>
                <td>@user.State</td>
                <td>@user.City</td>
                <td>
                    <a asp-page="Update" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
